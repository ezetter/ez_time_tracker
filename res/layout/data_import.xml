<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        style="@style/GlobalStyle"
        android:layout_height="fill_parent" android:orientation="vertical"
        >
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
    <TextView android:text="File: " android:textSize="20sp" android:textColor="#FFFFFF"
              android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <Spinner
            android:id="@+id/spinner_data_import_source"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/choose_import_file"/>
     </LinearLayout>
    <Button android:text="@string/import_data" android:id="@+id/button_data_import"
            android:textSize="26sp" android:textColor="#151555"
            android:layout_height="wrap_content" android:layout_width="fill_parent" />
    <Button android:text="@string/cancel" android:id="@+id/button_data_import_cancel"
            android:textSize="26sp" android:textColor="#151555"
            android:layout_height="wrap_content" android:layout_width="fill_parent" />
    <TextView android:text=""
              android:id="@+id/tvCurrentImportDirectory" android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

</LinearLayout>
