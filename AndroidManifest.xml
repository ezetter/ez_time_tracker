<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.zetterbaum.timetracker" android:versionName="0.91" android:versionCode="4">
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<application android:icon="@drawable/icon" android:label="@string/app_name"
		android:debuggable="false">
		<activity android:label="@string/app_name"
			android:name="com.zetterbaum.timetracker.activity.MainActivity"
			android:screenOrientation="portrait" android:launchMode="singleTask">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name="com.zetterbaum.timetracker.activity.TimeSheetReportActivity"/>
		<activity android:name="com.zetterbaum.timetracker.activity.CategoryActivity"/>
		<activity android:name="com.zetterbaum.timetracker.activity.SummaryReportActivity"/>
		<activity android:name="com.zetterbaum.timetracker.activity.TimeSliceEditActivity"
			android:screenOrientation="portrait"/>
		<activity android:name="com.zetterbaum.timetracker.activity.MainMenuActivity"
			android:screenOrientation="portrait" android:launchMode="singleTask"/>
		<activity android:name="com.zetterbaum.timetracker.activity.DataExportActivity"
			android:screenOrientation="portrait"/>
        <activity android:name="com.zetterbaum.timetracker.activity.DataImportActivity"
                  android:screenOrientation="portrait"/>
		<activity android:name="com.zetterbaum.timetracker.activity.RemoveTimeSliceActivity"
			android:screenOrientation="portrait"/>
	    <activity android:name="com.zetterbaum.timetracker.activity.SettingsActivity"
			android:screenOrientation="portrait"/>
	</application>
	<uses-sdk android:minSdkVersion="6" />

</manifest>
